bool canBeReversed(vector<int>& arr){
    int first=-1, last=-1;
    for(int i=0; i<arr.size()-1; i++){
        if(arr[i]>arr[i+1]){
            if(first==-1){
                first=arr[i];
            }
            last = arr[i+1];
            
        }
        
